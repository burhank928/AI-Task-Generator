<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Profile</h1>
  <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary' %>
</div>

<div class="mb-3">
  <p><strong>Email:</strong> <%= @user.email %></p>
</div>

<div class="mb-3">
  <p><strong>Portfolio Url:</strong> <%= @user.portfolio_url %></p>
</div>

<% if @user.published? %>
  <div class="mb-3">
    <p><strong>Sharable Url:</strong> <%= view_profile_url(@user.uuid) %></p>
  </div>
<% end %>

<div class="mb-3">
  <p><strong>Status:</strong> <%= @user.published ? 'Public' : 'Private' %></p>
</div>

<%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
