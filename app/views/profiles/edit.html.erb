<h1 class="mb-4">Update Personal Info</h1>

<%= form_with(model: @user, url: profile_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :portfolio_url, class: 'form-label' %>
    <%= form.text_field :portfolio_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :published, class: 'form-label' %>
    <div class="form-check">
      <%= form.checkbox :published, class: 'form-check-input' %>
      <%= form.label :published, class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit 'Update', class: 'btn btn-primary' %>
  </div>
<% end %>
