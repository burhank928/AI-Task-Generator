<div id="error-message"></div>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Generate Task List with AI</h1>
  <%= link_to tasks_path, class: 'btn btn-danger' do %>
    <i class="fas fa-arrow-left"></i> Back
  <% end %>
</div>

<%= form_with url: generate_tasks_path,  data: { turbo: true }, method: :post do %>
  <%= label_tag :goal, "Enter your goal", class: 'form-label' %>
  <div class="form-row align-items-center">
    <div class="col">
      <%= text_field_tag :goal, nil, class: 'form-control mb-2', required: true %>
    </div>
    <div class="col-auto">
      <%= submit_tag "Generate", class: 'btn btn-primary mb-2' %>
    </div>
  </div>

<% end %>

<div id="task-form"></div>